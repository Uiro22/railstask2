<div class="box">
    <div class=search-container>
        <%= search_form_for @q, url: search_rooms_path, method: :get, local: true do |f| %>
        <%= f.search_field :address_cont, placeholder:"エリア" %>
        <% end %>
        <%= search_form_for @q, url: search_rooms_path, method: :get, local: true do |f| %>
        <%= f.search_field :name_or_description_or_address_cont, placeholder:"キーワード" %>
        <button>検索</button>
        <% end %>
    </div>
    <h2 class="title">検索結果:<%= @results.count %>件</h2>

    <% if @results.count > 0 %>
    <table class= "table">
    <thead>
        <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        </tr>
    </thead>

    <tbody>
        <% @results.each do |room| %>
        <tr>
        <td>
          <%= link_to room do %>
            <%= image_tag room.room_img.url if room.room_img? %>
            <%= image_tag("https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png") unless room.room_img? %>
            <% end %>
        </td>
        <td><%= link_to room.name,room %></td>
        <td><%= room.address %></td>
        <td>¥<%= room.price %></td>
        </tr>
        <% end %>
    </tbody>
    </table>  

    <% else %>
    <p>検索結果はありません</p>
    <% end %>
</div>
