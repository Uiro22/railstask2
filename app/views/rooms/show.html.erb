<div class="box">
    <%= render "shared/error", obj: @reservation %>
    <%= link_to "戻る", :back %>

    <table class= "table">
    <tr>
    <td>
        <%= image_tag @room.room_img.url if @room.room_img? %>
        <%= image_tag("https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png") unless @room.room_img? %>
    </td>
    </tr>

    <tr>
    <td><%= @room.name %></td>
    </tr>

    <tr>
    <td><%= @room.address %></td>
    </tr>

    <tr>
    <td><%= @room.description %></td>
    </tr>
    </table>

    <%= form_with model: @reservation, url:new_reservation_path, method: :get do |f| %>
    <%= f.hidden_field:room_id, value:@room.id %>
    <%= f.hidden_field:user_id, value:current_user.id %>

    <p>¥<%= @room.price %>〜</p>
        <%= f.label :start_date ,"チェックイン" %><br>
        <%= f.date_field :start_date %><br>

        <%= f.label :end_date ,"チェックアウト" %><br>
        <%= f.date_field :end_date %><br>

        <%= f.label :number ,"人数" %><br>
        <%= f.number_field :number %><br>

        <button class= "button is-info">予約する</button>

    <% end %>
 </div>
